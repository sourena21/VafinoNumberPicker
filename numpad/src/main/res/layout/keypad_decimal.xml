<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/KD_llNumpadBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/KD_btnNumber3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="3"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/KD_btnNumber6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="6"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="5"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="4"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/KD_btnNumber9"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="9"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber8"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="8"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <Button
                android:id="@+id/KD_btnNumber7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="7"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/KD_imbBackSpace"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_backspace" />
            </RelativeLayout>

            <Button
                android:id="@+id/KD_btnNumber0"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/numpad_button_background_white"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_extra_large_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/KD_btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/numpad_button_background_green"
                    android:text="تایید"
                    android:visibility="invisible"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_extra_large_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>