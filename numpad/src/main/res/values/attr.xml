<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VafinoKeyboard">
        <attr name="inputType" format="string">
            <enum name="text" value="1" />
            <enum name="number_decimal" value="2" />
        </attr>
        <attr name="language" format="string">
            <enum name="persian" value="1" />
            <enum name="english" value="2" />
        </attr>
        <attr name="displayVisibility" format="integer">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="textSize" format="dimension" />
        <attr name="maxLeangth" format="integer" />
        <attr name="inputHintText" format="string" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputHintColor" format="color" />
        <attr name="inputValue" format="string" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="showPersianCharPopup" format="boolean" />
        <attr name="showSubmitButton" format="boolean" />
        <attr name="showLanguageSelectionButton" format="boolean" />
        <attr name="showEnterInPersian" format="boolean" />
        <attr name="showPunctuationsInPersian" format="boolean" />
        <attr name="setSubmitText" format="string" />
    </declare-styleable>

    <declare-styleable name="NumberPicker">
        <attr name="showLimitMessage" format="boolean" />
        <attr name="maxValue" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="value" format="integer" />
    </declare-styleable>

    <attr name="maxYear" format="integer" />
    <attr name="minYear" format="integer" />
    <attr name="year" format="integer" />
    <attr name="month" format="integer" />
    <attr name="day" format="integer" />

    <declare-styleable name="NumberPersianDatePicker">
        <attr name="maxYear" />
        <attr name="minYear" />
        <attr name="year" />
        <attr name="month" />
        <attr name="day" />
    </declare-styleable>

    <declare-styleable name="KeyboardPersianDatePicker">
        <attr name="maxYear" />
        <attr name="minYear" />
        <attr name="year" />
        <attr name="month" />
        <attr name="day" />
    </declare-styleable>
</resources>