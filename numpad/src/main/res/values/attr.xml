<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VafinoKeyboard">
        <attr name="inputType" format="string">
            <enum name="persian" value="1" />
            <enum name="number_decimal" value="2" />
        </attr>
        <attr name="displayVisibility" format="integer">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="textSize" format="dimension" />
        <attr name="maxLeangth" format="integer" />
        <attr name="inputHintText" format="string" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputHintColor" format="color" />
        <attr name="inputValue" format="string" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="showPersianCharPopup" format="boolean" />
        <attr name="showSubmitButton" format="boolean" />
        <attr name="setSubmitText" format="string" />
    </declare-styleable>
</resources>